@page "/reporte-financiero-auxiliar-dia"
@* Incluir el archivo de CSS *@
<link href="css/reporteFinancieroAuxiliarDia.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
@using Microsoft.AspNetCore.Components.Forms
<!-- Cabecera de pestañas -->
<div class="tabs-detallado">
    <button class="active-detallado dropdown-button">
        Auxiliar
    </button>
    <button>Auxiliar Personalizado</button>
    <button>Contable</button>
    <button>Auditoria</button>
    <button>Gastos</button>
    <i class="fas fa-chevron-right tab-icon-detallado"></i>
</div>

<!-- Contenedor Principal -->
<div class="reporte-detallado-container">
    <!-- Título del reporte -->
    <div class="reporte-detallado-titulo-container">
        <div class="reporte-detallado-titulo">
            <h2>Reporte Auxiliar</h2>
        </div>
        <img src="/css/img/favoritos.png" alt="Favorito" class="icon-fav-detallado" onclick="toggleFavorito()">
    </div>

    <!-- Selector de Empeños -->
    <div class="selector-container">
        <label class="label-empenos">Cuenta</label>
        <div class="select-empenos-container">
            <select class="select-empenos">
                <option>Todos</option>
                <option>Vitrina</option>
                <option>Apartados</option>
                <option>Otros</option>
            </select>
            <i class="fas fa-caret-down select-icon"></i>
        </div>
        <div class="opciones-fechas-container">
            <input type="radio" id="del-dia" name="opcion-fechas" class="radio-button" checked>
            <label for="del-dia" class="radio-label">Del día</label>

            <input type="radio" id="fechas" name="opcion-fechas" class="radio-button">
            <label for="fechas" class="radio-label">Fechas</label>
        </div>
        <!-- Contenedor de fechas -->

    </div>
    <div class="fecha-container">
        <div class="fecha-item">
            <label class="fecha-label">Fecha inicial</label>
            <div class="input-date-container">
                <InputDate id="fecha-inicial" @bind-Value="FechaInicial" class="input-fecha" />
                <img src="/css/img/calendario.png" alt="Calendario" class="imagen-calendario" />
            </div>

        </div>
        <div class="fecha-item">
            <label class="fecha-label">Fecha final</label>
            <div class="input-date-container">
                <InputDate id="fecha-inicial" @bind-Value="FechaInicial" class="input-fecha" />
                <img src="/css/img/calendario.png" alt="Calendario" class="imagen-calendario" />
            </div>
        </div>
    </div>
    <!-- Opciones de fechas -->
    <!-- Contenedor de botones -->
    <div class="button-detallado-container">
        <div class="button-detallado-column">
            <button class="button-detallado cancelar-detallado-button" @onclick="Cancelar">Cancelar</button>
        </div>
        <div class="button-detallado-column">
            <button class="button-detallado imprimir-detallado-button" @onclick="Imprimir">Imprimir</button>
        </div>
    </div>
</div>

@code {
    private DateTime? FechaInicial { get; set; }
    private DateTime? FechaFinal { get; set; }
    private void Cancelar() { /* Lógica de cancelación */ }
    private void Imprimir() { /* Lógica de impresión */ }
}
